<h1 id="logo">
	<a href="/">Bookmark Manager</a>
</h1>
<nav>
	<ul>
		<% if current_user %>
			<li id="sign_out">
				<form method="post" action="/sessions">
					<input type="hidden" name="_method" value="delete">
					<input type="submit" value="Sign out">
				</form>
				</li>
		<% else %>	
			<li><a href='/sessions/new' id='sign-in' class='button'>Sign in</a></li>
			<li><a href='/users/new' id='sign-up' class='button'>Sign up</a></li>
		<% end %>
		<li><a href="/links/new" class="button highlighted">Add Link</a></li>
	</ul>

</nav>

<main>
	<% if current_user %>
		<h2 id="welcome-message">
		Welcome, <%=current_user.email %>
		</h2>
	<% end %>
</main>
